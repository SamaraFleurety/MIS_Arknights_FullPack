<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- 缪尔赛思的护盾 -->

    <ThingDef ParentName="AKS_BeltBase">
        <defName>AKS_ShieldBelt_Muelsyse</defName>
        <label>水之形</label>
        <description>你看着她惊讶，木讷，不知所措，然后握住了你的手。她在邀请你，她渴望与你分享大地。</description>
        <statBases>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyse</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="AKS_Shield.TCP_GenericShield">
                <energyMax>160</energyMax>
                <energyRegenRate>0.4</energyRegenRate>
                <energyLostPerDmg>0.01</energyLostPerDmg>
                <allowEnergyOverflow>false</allowEnergyOverflow>
                <energyRatioOnReset>0.2</energyRatioOnReset>
                <ticksToReset>3600</ticksToReset>
                <canAbsorbMeleeDmg>true</canAbsorbMeleeDmg>
                <meleeAbsorbFactor>2</meleeAbsorbFactor>
                <rangedAbsorbFactor>1</rangedAbsorbFactor>
                <meleeDodgeChanceFactor>0.2</meleeDodgeChanceFactor>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderStatic">
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyseS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <drawOffsetNorth>(0,0.1,0)</drawOffsetNorth>
                </bubbleStaticOverlay>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderRotate">
                <bubbleRotateTexPath>Things/ShieldBelt/Vanguard/ShieldBeltMuelsyseD</bubbleRotateTexPath>
            </li>
        </comps>
    </ThingDef>

