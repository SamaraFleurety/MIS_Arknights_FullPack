    <ThingDef ParentName="AKS_BeltBase">
        <defName>AKS_ShieldBelt_Gravel</defName>
        <label>鼠群</label>
        <description>鼠群啊，聚集起来吧！</description>
        <statBases>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Specialist/ShieldBeltGravelS</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="AKS_Shield.TCP_GenericShield">
                <energyMax>120</energyMax>
                <energyRegenRate>0.4</energyRegenRate>
                <energyLostPerDmg>0.01</energyLostPerDmg>
                <allowEnergyOverflow>false</allowEnergyOverflow>
                <energyRatioOnReset>0.2</energyRatioOnReset>
                <ticksToReset>2400</ticksToReset>
                <canAbsorbMeleeDmg>true</canAbsorbMeleeDmg>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>2</rangedAbsorbFactor>
                <meleeDodgeChanceFactor>0.3</meleeDodgeChanceFactor>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderStatic">
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Specialist/ShieldBeltGravelS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                </bubbleStaticOverlay>
            </li>
        </comps>
    </ThingDef>

