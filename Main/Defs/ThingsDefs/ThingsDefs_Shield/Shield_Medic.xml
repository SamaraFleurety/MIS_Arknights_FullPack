<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- 闪灵的护盾 -->

    <ThingDef ParentName="AKS_BeltBase">
        <defName>AKS_ShieldBelt_Shining</defName>
        <label>黑恶魔的庇护</label>
        <description>无论繁荣，还是灭亡。</description>
        <statBases>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Medic/ShieldBeltShining</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="AKS_Shield.TCP_GenericShield">
                <energyMax>200</energyMax>
                <energyRegenRate>0.2</energyRegenRate>
                <energyLostPerDmg>0.01</energyLostPerDmg>
                <allowEnergyOverflow>false</allowEnergyOverflow>
                <energyRatioOnReset>0.3</energyRatioOnReset>
                <ticksToReset>1800</ticksToReset>
                <canAbsorbMeleeDmg>true</canAbsorbMeleeDmg>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>2</rangedAbsorbFactor>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderStatic">
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Medic/ShieldBeltShiningS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <drawOffsetNorth>(0,0.1,0)</drawOffsetNorth>
                </bubbleStaticOverlay>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderRotate">
                <bubbleRotateTexPath>Things/ShieldBelt/Medic/ShieldBeltShiningD</bubbleRotateTexPath>
            </li>
        </comps>
    </ThingDef>

