<Defs>

    <!-- 浊心斯卡蒂的护盾 -->

    <ThingDef ParentName="AKS_BeltBase">
        <defName>AKS_ShieldBelt_CorruptingHeart</defName>
        <label>同葬无光之愿</label>
        <description>她从不想伤害任何人，亦不想成为灾厄，她是如此深爱着你们，渴望着你们幡然悔悟，成为她的血亲，去往那永恒的故乡和摇篮。</description>
        <statBases>
        </statBases>
        <graphicData>
            <texPath>Things/ShieldBelt/Supporter/ShieldBeltCorruptingHeart</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <comps>
            <li Class="AKS_Shield.TCP_GenericShield">
                <energyMax>600</energyMax>
                <energyRegenRate>0.6</energyRegenRate>
                <energyLostPerDmg>0.015</energyLostPerDmg>
                <allowEnergyOverflow>false</allowEnergyOverflow>
                <energyRatioOnReset>1</energyRatioOnReset>
                <ticksToReset>2700</ticksToReset>
                <canAbsorbMeleeDmg>true</canAbsorbMeleeDmg>
                <meleeAbsorbFactor>1</meleeAbsorbFactor>
                <rangedAbsorbFactor>1</rangedAbsorbFactor>
                <meleeDodgeChanceFactor>0.35</meleeDodgeChanceFactor>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderStatic">
                <bubbleStaticOverlay>
                    <texPath>Things/ShieldBelt/Supporter/ShieldBeltCorruptingHeartS</texPath>
                    <graphicClass>Graphic_Single</graphicClass>
                    <drawSize>(2,2)</drawSize>
                    <drawOffsetNorth>(0,0.1,0)</drawOffsetNorth>
                </bubbleStaticOverlay>
            </li>
            <li Class="AKS_Shield.Extension.TCP_ExtraRenderRotate">
                <bubbleRotateTexPath>Things/ShieldBelt/Supporter/ShieldBeltCorruptingHeartD</bubbleRotateTexPath>
            </li>
        </comps>
    </ThingDef>

