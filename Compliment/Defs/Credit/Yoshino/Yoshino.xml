    <Def Class="AK_DLL.OperatorFashionSetDef">
		<defName>FS_FashionSet_YoshinoA</defName>
		<label>四糸乃-战装</label>
		<hair>FS_Hair_YoshinoA</hair>
		<apparels>
			<li>FS_Apparel_YoshinoA</li>
